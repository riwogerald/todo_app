<div class="container">
  <%= form_with(model: task, local: true, class: "card p-4 shadow-sm") do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed, "Completed", class: "form-check-label" %>
    </div>

    <div class="d-flex justify-content-between">
      <%= link_to "Back", tasks_path, class: "btn btn-secondary" %>
      <%= form.submit "Save Task", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
